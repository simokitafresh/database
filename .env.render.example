# Render deployment environment example for the Adjusted OHLCV API
# Copy this to your Render environment settings (prefer setting secrets in dashboard).

# Runtime
APP_ENV=production

# Database URLs
# Prefer setting these via Render Dashboard (Environment > Add Environment Variable)
# The application uses async driver, Alembic uses sync driver.
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:5432/DBNAME
ALEMBIC_DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:5432/DBNAME

# API limits (Render defaults are more generous)
API_MAX_SYMBOLS=50
API_MAX_ROWS=1000000

# Fetcher settings
YF_REFETCH_DAYS=30
YF_REQ_CONCURRENCY=4
FETCH_TIMEOUT_SECONDS=8
FETCH_MAX_RETRIES=3
FETCH_BACKOFF_MAX_SECONDS=8.0
REQUEST_TIMEOUT_SECONDS=15

# CORS
CORS_ALLOW_ORIGINS=https://your-frontend.example

# Logging
LOG_LEVEL=INFO

# Gunicorn/Uvicorn
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=120
PORT=8000

